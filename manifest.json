{
    "manifest_version": 3,
    "name": "Dark Pinterst",
    "desription": "Making pinterest theme dark in your browser.",
    "version": "0.0.1",
    "author": "slurry",
    "action":{
        "default_popup": "html/popup.html"    
    },
    "content_scripts": [
        {
            "css":["css/default.css"],
            "matches":[
                "*://*.pinterest.com/*"
            ]
        }
    ],
    "permissions":[
        "activeTab", 
        "scripting", 
        "storage"
    ],
    "icons": {
        "16":"icons/icon16.png",
        "32":"icons/icon32.png",
        "64":"icons/icon64.png",
        "128": "icons/icon128.png"
    }
}